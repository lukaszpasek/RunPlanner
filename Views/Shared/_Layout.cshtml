<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RunPlanner</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RunPlanner.styles.css" asp-append-version="true" />
    <script type="text/javascript" src="https://www.bing.com/api/maps/mapcontrol?callback=loadMap" async defer></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/togeojson/0.15.0/togeojson.min.js"></script>
    <script type="text/javascript" src="https://www.bing.com/api/maps/mapcontrol?key=AkOaQu2DLHmVfkRSMITNik0HozZniajnvTQXRtDJsthVQwzJs8bZPtdEUGraXsHy" async defer></script>
    <!-- Bootstrap CSS i JS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script>
        function showPopup() {
            $(".overlay").show();
            $(".popup").show();
        }

        function hidePopup() {
            $(".overlay").hide();
            $(".popup").hide();
        }
        function updateAndRefreshMap() {
            // Simulate the updated GeoJSON data after calling Home/ConvertTrackGPXToGeoJSON
            var updatedGeoJsonData = { "type": "FeatureCollection", "features": [{ "type": "Feature", "geometry": { "type": "LineString", "coordinates": [[22.4194, 37.7749], [22.4196, 37.7751], [22.4198, 37.7753], [22.42, 37.7755], [22.421, 37.776]] }, "properties": { "name": "Updated Track" } }] };

            // Call the function to display the updated route
            displayGeoJsonRoute(updatedGeoJsonData);
        }
        function observeChanges(obj, prop, callback) {
            var val = obj[prop];
            Object.defineProperty(obj, prop, {
                get: function () {
                    return val;
                },
                set: function (newVal) {
                    val = newVal;
                    callback();
                }
            });
        }
    </script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var currentUrl = window.location.href;
            document.getElementById('returnUrl').value = currentUrl;
        });
    </script>
    <script type="text/javascript">
        function loadMap() {
        }
    </script>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">RunPlanner</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item dropdown">
                            <a class="nav-link text-dark dropdown-toggle" href="#" id="privacyDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                API do wyświetlenia trasy
                            </a>
                            <div class="dropdown-menu" style="z-index: 10000;" aria-labelledby="privacyDropdown">
                                <a class="dropdown-item" href="/Home/HEREMap">HEREMap</a>
                                <a class="dropdown-item" href="/Home/BingMap">BingMap</a>
                                <a class="dropdown-item" href="/Home/GoogleMaps">GoogleMaps</a>
                                <a class="dropdown-item" href="/Home/OpenStreet">OpenStreet</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            @model GpxTrackViewModel

                            <button onclick="showPopup()">Dodaj trasę</button>

                            <div class="overlay" onclick="hidePopup()"></div>
                            <div class="popup">
                                <form method="post" action="@Url.Action("Create", "Home")" class="form-container">
                                    <div class="form-group">
                                        <label for="Name" class="label">Name:</label>
                                        <input type="text" id="Name" name="Name" class="input" />
                                        <span asp-validation-for="Name"></span> 
                                    </div>

                                    <div class="form-group">
                                        <label for="Description" class="label">Description:</label>
                                        <input type="text" id="Description" name="Description" class="input" />
                                    </div>

                                    <div class="form-group">
                                        <label for="GpxData" class="label">GpxData:</label>
                                        <textarea id="GpxData" name="GpxData" class="input"></textarea>
                                        <span asp-validation-for="GpxData"></span> 
                                    </div>

                                    <input type="hidden" id="returnUrl" name="returnUrl" />
                                    <button type="submit">Dodaj</button>
                                </form>
                            </div>

                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - RunPlanner - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
